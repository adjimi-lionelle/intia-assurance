{% extends 'base.html.twig' %}

{% block title %}Assurance index{% endblock %}

{% block body %}
    <h1>Assurance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Datesouscription</th>
                <th>DateExpiration</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assurance in assurances %}
            <tr>
                <td>{{ assurance.id }}</td>
                <td>{{ assurance.type }}</td>
                <td>{{ assurance.datesouscription ? assurance.datesouscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ assurance.dateExpiration ? assurance.dateExpiration|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ assurance.createdAt ? assurance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_assurance_show', {'id': assurance.id}) }}">show</a>
                    <a href="{{ path('app_assurance_edit', {'id': assurance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_assurance_new') }}">Create new</a>
{% endblock %}
